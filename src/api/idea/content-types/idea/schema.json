{
  "kind": "collectionType",
  "collectionName": "ideas",
  "info": {
    "singularName": "idea",
    "pluralName": "ideas",
    "displayName": "Idea",
    "description": "Project ideas and future possibilities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "tags": {
      "type": "json"
    },
    "priority": {
      "type": "enumeration",
      "enum": ["high", "medium", "low"],
      "default": "medium"
    },
    "inspiration": {
      "type": "text"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["idea", "prototype", "mvp", "implemented", "shipped", "complicated", "abandoned", "paused"],
      "default": "idea",
      "required": true
    },
    "showTimelinePublicly": {
      "type": "boolean",
      "default": false
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "sourceIdea"
    },
    "snapshots": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::idea-snapshot.idea-snapshot",
      "mappedBy": "idea"
    }
  }
}
